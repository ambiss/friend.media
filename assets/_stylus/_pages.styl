.me
    &__relevant
        position relative

        &--level1
            @extend .content__relevant
            

        &--level2
            position relative
            z-index 99
            
            &:before 
                content ''
                position absolute
                top 0
                left 0
                z-index 0

                width 86%
                height 100%

                background-color rgba(255, 255, 255, 0.9)
    
    &__marcado
        position relative
        z-index 10

        display block
        padding 8px 16px

        color third
        font-weight 900

    &__novocontexto
        position relative
        color #fff
        font-size 18px
        padding 40px 0

        &:before
            content ''
            position absolute
            top 0
            z-index 0
            width 100%
            height 100%

            background-color main
            opacity .8

    &__desc
        position relative
        z-index 10

        padding: 10px 16px

[data-page="about"]
    font-size 16px


