#page
    background-image url('images/waveFriend05Mobile.jpg')
    background-repeat no-repeat
    background-position -39px -90px

    @media screen and (min-width: 359px)
        background-position-y: -60px

    @media screen and (min-width: 399px)
        background-position-y: -40px

    @media screen and (orientation: landscape)
        background-position-y: -133px


// ----------- parts layout

.header
    position relative
    z-index 10

    &__relevant
        display block
        
        &--level2
            background-color rgba(255, 255, 255, .9)
            
    &__linkBrand
        display block
        padding 8px

    &__vectorBrand
        max-width 320px

    &__nav
        position absolute

.content
    &__relevant
        padding 26px
        color main
        font-size 11vw
        font-weight 900
        background-color rgba(255,255,255,0.59)

        &--level1
            display block

        @media screen and (orientation: landscape)
            font-size 7vw

// particula
.goldSection
    padding 8px
    display flex
    flex-direction column
    justify-content center
    align-items flex-end

    text-align right
    opacity .89

    &__each
        padding 9px
        max-width 90%
        margin-top 4.5px
        margin-bottom 4.5px
        
        color #fff
        font-weight 700

        background-color sec

.footer
    margin-top 33px
    
    &__relevant
        padding 20px

    &__list 
        font-size 20px
        limit(94%, 0, 20px)

    &__each
        height 60px
        margin-bottom 20px
    
    &__eachContencao
        display flex
        justify-content flex-start
        align-items center
    
    &__eachValue
        font-size 22px
        font-family typoMain 

    &__vector
        display block
        margin-right 5%
        width 40%
        max-width 60px
        max-height 60px
        &--email
            display block

    
    &__link
        @extend .footer__eachContencao

    &__descFinal
        padding 26px
        color #fff
        font-weight 700
        letter-spacing 1px
        background-color third

    @media screen and (min-width: 374px) 
        margin-top 18px
        

