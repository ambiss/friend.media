body, h1, h2, h3, h4, h5, h6,
p, blockquote, pre, hr,
dl, dd, ol, ul, figure 
    margin 0
    padding 0

a, a:hover
    text-decoration none

ul, ol
    list-style none

:focus
    outline none

body
    font-size 1.1rem
    font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

// variables

main    = #00145c
sec     = #008ed2
third   = #e3453e
bit     = #333333
border  = #eeeeee
div     = #e9e9e9