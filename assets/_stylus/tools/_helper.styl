.helper
    &__destaque
        color third
        font-weight: 900

    &__weight
        font-weight 900
        &--level2
            font-weight 700
        &--level3
            font-weight 600
        &--level4
            font-weight 500
        &--levellight
            font-weight 300

    &__relevant
        &--level2 
            position relative
            z-index 99
            
            &:before 
                content ''
                position absolute
                top 0
                left 0
                z-index 0

                width 86%
                height 100%

                background-color rgba(255, 255, 255, 0.9)

    &__marcado
        position relative
        z-index 10

        display block
        padding 8px 16px

        color third
        font-weight 900

    &__novocontexto
        position relative
        color #fff
        font-size 18px
        padding 40px 0

        &:before
            content ''
            position absolute
            top 0
            z-index 0
            width 100%
            height 100%

            background-color main
            opacity .8

    &__desc
        position relative
        z-index 10

        padding: 10px 16px

    // buttons

    &__button
        background-color transparent
        border 0
        padding 4px
        display flex
        flex-direction column
        justify-content center
        align-items center

        &--contato
            width 30%
            height 50px
            